{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"]
        },
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": false
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
            "jsx": "react",
            "isolatedModules": true,
            "paths": {
                "react": [
                    "./node_modules/@types/react"
                ]
            }
        }
    },
    "include": [
        "./config/jest/setupTests.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx",
    ]
}